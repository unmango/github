{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"github>UnstoppableMango/renovate-config"
	],
	"automerge": true,
	"schedule": [
		"before 4am on the first day of the month"
	],
	"packageRules": [
		{
			"groupName": "pulumi",
			"matchDepNames": [
				"pulumi/pulumi$",
				"@pulumi/pulumi"
			]
		}
	]
}
