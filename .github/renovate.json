{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"automerge": true,
  "schedule": [
    "before 4am on the first day of the month"
  ],
	"customManagers": [
		{
			"customType": "regex",
			"depNameTemplate": "pulumi/pulumi",
			"datasourceTemplate": "github-releases",
			"fileMatch": [
				"\\.versions\\/pulumi"
			],
			"matchStrings": [
				"(?<currentValue>\\d+\\.\\d+\\.\\d+)"
			]
		}
	],
	"packageRules": [
		{
			"groupName": "pulumi",
			"matchDepNames": [
				"pulumi/pulumi$"
			]
		}
	]
}
